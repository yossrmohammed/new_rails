<form action="<%= defined?(author) && author.persisted? ? author_path(author) : authors_path %>" method="post">
  <% if defined?(author) && author.persisted? %>
    <input type="hidden" name="_method" value="patch">
  <% end %>
  
  <label for="name">Name</label><br>
  <input type="text" id="name" name="author[name]" value="<%= defined?(author) ? author.name : '' %>"><br>
  
  <label for="dob">Date of Birth</label><br>
  <input type="date" id="dob" name="author[dob]" value="<%= defined?(author) ? author.dob : '' %>"><br>
  
  <label for="email">Email</label><br>
  <input type="email" id="email" name="author[email]" value="<%= defined?(author) ? author.email : '' %>"><br>
  
  <label for="phone_number">Phone Number</label><br>
  <input type="text" id="phone_number" name="author[phone_number]" value="<%= defined?(author) ? author.phone_number : '' %>"><br>
  
  <input type="submit" value="<%= defined?(author) && author.persisted? ? 'Update' : 'Create' %>">
</form>
